# EditorConfig is awesome: http://EditorConfig.org

root = true

[**]
indent_style = tab
tab_width = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[**.json]
indent_style = space
indent_size = 2
charset = latin1

[**.{md,markdown}]
trim_trailing_whitespace = false

[**.py]
indent_style = tab
indent_size = 4
max_line_length= 80

[**.{yml,yaml}]
indent_style = space
indent_size = 2
